<apex:page standardController="Case" extensions="LG_ManageTenantExtension">
    <apex:includeScript value="/soap/ajax/30.0/connection.js"/>
    <apex:includeScript value="/support/console/30.0/integration.js"/>
    <link rel="stylesheet" href="/apex/sfLigtningOverride" />
    <apex:form > 
    <apex:pageBlock id="mainSection1">
        <apex:pageMessages ></apex:pageMessages>
        <apex:pageBlockSection title="Customer Tenant Details" columns="2" collapsible="true">
        	<apex:outputField value="{!tenantAccount.Name}"/>
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Tenant Address Details" columns="2" collapsible="true">
        	<apex:outputField value="{!tenantAccount.LG_PostalStreet__c}"></apex:outputField>
        	<apex:outputField value="{!tenantAccount.LG_PostalHouseNumber__c}"></apex:outputField>
        	<apex:outputField value="{!tenantAccount.LG_PostalHouseNumberExtension__c}"></apex:outputField>
        	<apex:outputField value="{!tenantAccount.LG_PostalPostalCode__c}"></apex:outputField>
        	<apex:outputField value="{!tenantAccount.LG_PostalCity__c}"></apex:outputField>        	
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Primary Contact Details" columns="2" collapsible="true">
        	<apex:outputField value="{!tenantContact.Name}"></apex:outputField>
        	<apex:outputField value="{!tenantContact.Email}"></apex:outputField>
        	<apex:outputField value="{!tenantContact.MobilePhone}"></apex:outputField>
        	<apex:outputField value="{!tenantContact.Phone}"></apex:outputField>
        </apex:pageBlockSection>
        <apex:outputPanel rendered="{!isClosed || !isEditMode}">
        	<apex:pageBlockSection title="Tenant Details" columns="2" collapsible="true">
	        	<apex:outputField value="{!tenantAccount.LG_Huawei_Tenant_ID__c}"></apex:outputField>
	        	<apex:outputField value="{!tenantContact.LG_Username__c}"></apex:outputField>
	        	<apex:outputField value="{!tenantContact.LG_Password__c}"></apex:outputField>
        	</apex:pageBlockSection>
        </apex:outputPanel>
        <apex:outputPanel rendered="{!isEditMode}" >
        	<apex:pageBlockSection title="Update Tenant Details" columns="2" collapsible="true">
        		<apex:inputField value="{!tenantAccount.LG_Huawei_Tenant_ID__c}"></apex:inputField>
        		<apex:inputField value="{!tenantContact.LG_Username__c}"></apex:inputField>
        		<apex:inputField value="{!tenantContact.LG_Password__c}"></apex:inputField>
        	</apex:pageBlockSection>
        </apex:outputPanel>
        
        <apex:pageBlockButtons >
			<apex:commandButton action="{!setEditMode}" value="Edit" rendered="{!!isClosed}" reRender="mainSection1"/>
			<apex:commandButton action="{!updateTenantDetails}" value="Save" rendered="{!!isClosed && isEditMode}" reRender="mainSection1"/>
        </apex:pageBlockButtons>
    </apex:pageBlock>
    </apex:form>
    
</apex:page>