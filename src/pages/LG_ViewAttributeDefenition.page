<apex:page StandardController="csord__Service__c" extensions="LG_ViewAttributeDefenitionController" showHeader="true" sidebar="true">
    <link rel="stylesheet" href="/apex/sfLigtningOverride" />
	<apex:pageMessages />
	<apex:form id="fullform">
		<apex:includeScript value="{!$Resource.jquery}" />
		<apex:includeScript value="{!URLFOR($Resource.testjquery, 'jquery.treetable.js')}" />
		<apex:stylesheet value="{!URLFOR($Resource.testjquery, 'jquery.treetable.css')}" />
		<style>
			table.treetable {
				border: 1px solid #888;
				border-collapse: collapse;
				font-size: 1.0em;
				line-height: 1;
				margin: .6em 0 1.8em 0;
				width: 100%;
			}
			
			table.treetable caption {
				font-size: .9em;
				font-weight: bold;
				margin-bottom: .2em;
			}
			
			table.treetable thead {
				background: #aaa url({!URLFOR($Resource.testjquery, 'bg-table-thead.png')}) repeat-x top left;
				font-size: .9em;
			}
			
			table.treetable thead tr th {
				border: 1px solid #888;
				font-weight: bold;
				padding: .3em 1em .1em 1em;
				text-align: left;
			}
			
			table.treetable tbody tr td {
				cursor: default;
				padding: .3em 1em;
			}
			
			table.treetable span {
				background-position: center left;
				background-repeat: no-repeat;
				padding: .2em 0 .2em 1.5em;
			}
			
			table.treetable tr.collapsed span.indenter a {
				background-image: url({!URLFOR($Resource.testjquery, 'expand.png')});
			}
			
			table.treetable tr.expanded span.indenter a {
				background-image: url({!URLFOR($Resource.testjquery, 'collapse.png')});
			}
			
			table.treetable tr.branch {
				background-color: #f9f9f9;
			}
			
			table.treetable tr.selected {
				background-color: #ddd;
				color: #fff;
			}
			
			table.treetable tr.collapsed.selected span.indenter a {
				background-image: url({!URLFOR($Resource.testjquery, 'expand-light.png')});
			}
			
			table.treetable tr.expanded.selected span.indenter a {
				background-image: url({!URLFOR($Resource.testjquery, 'collapse-light.png')});
			}
			
			table.treetable tr.accept {
				background-color: #a3bce4;
				color: #fff
			}
			
			table.treetable tr.collapsed.accept td span.indenter a {
				background-image: url({!URLFOR($Resource.testjquery, 'expand-light.png')});
			}
			
			table.treetable tr.expanded.accept td span.indenter a {
				background-image: url({!URLFOR($Resource.testjquery, 'collapse-light.png')});
			}

			.state-indicator-image {
				cursor: pointer;
			}
		</style>
		<script>
        $.fn.expandAll = function() {
    		$(this).find("tr").removeClass("collapsed").addClass("expanded").each(function(){
        	$(this).expand();
    		});
		};
			var categoryId;
			var productId; 
			var catalogueLines;
			var currentNode;
			var showSlpashScreen = true;
			//
			$('document').ready(function () {
				// unblock when ajax activity stops 
				$(document).ajaxStop($.unblockUI);
				//
				getServiceProductConfigurationDetails();
			});
			//
			function getServiceProductConfigurationDetails() {
                
				Visualforce.remoting.Manager.invokeAction(
					'{!$RemoteAction.LG_ViewAttributeDefenitionController.getServiceProductConfigurationDetails}',
					'{!csord__Service__c.Id}',
					handleGetServiceProductConfigurationDetailsResponseForAttributes,
					{escape: false}
				);
			}
			//
        function handleGetServiceProductConfigurationDetailsResponseForKeyAttributes(result, event) {
				if (event.type == 'exception') {
					alert(event.message);
				} else {
                    $('#ServiceConfigurationTreeDiv').empty();
					serviceConfigList = result;
					//
					//console.log(JSON.stringify(serviceConfigList));
					//console.log('**result: '+result);
					var table = ''+
							'<table id="ServiceConfigurationTree" class="treetable">'+
							'    <thead>'+
							'        <tr>'+
							'            <th>Name</th>'+
							'            <th>Attribute Value</th>'+
							'        </tr>'+
							'    </thead>'+
							'    <tbody id="ServiceConfigurationTreeBody">'+
							'        '+
							'    </tbody>'+
							'</table>';
                    
					$('#ServiceConfigurationTreeDiv').append(table);
					if (serviceConfigList != undefined) {
						//
						for(var i = 0; i < serviceConfigList.length; i++) {
							var serviceConfig = serviceConfigList[i];
							var row;
							row =  '<tr id="service" data-tt-id="service"';
							row += '>';
							row += '<td><a href="/'+serviceConfig.service.Id+'" target="_blank">'+serviceConfig.service.Name+'</a></td>';
							row += '<td></td>';
							row += '</tr>';
							$('#ServiceConfigurationTreeBody').append(row);
							//
							if (serviceConfig.productConfiguration != undefined) {
								
								for(var k = 0; k < serviceConfig.keyAttributes.length; k++) {
									var att = serviceConfig.keyAttributes[k];
									row  = '<tr id="'+att.name+att.value+'" data-tt-id="'+att.name+att.value+'"';
									row += ' data-tt-parent-id="service"';
									row += '>';
									row += '<td>'+att.name+'</td>';
									row += '<td>'+att.value+'</td>';
									row += '</tr>';
									$('#ServiceConfigurationTreeBody').append(row);
									
								}
							}
	
						
                        
                        }
					}
                    //
					$("#ServiceConfigurationTree").treetable(
						{expandable: true,
                         column: 0,
                         onNodeCollapse: function() {},
                         onNodeExpand: function() {},
						 onNodeInitialized: function() {}
						});
                    $("#ServiceConfigurationTree").treetable("expandAll");
					//
					// ------------------------------------------------------------
					// Highlight selected row
					$("#ServiceConfigurationTree tbody").on("mousedown", "tr", function () {
						$(".selected").not(this).removeClass("selected");
						$(this).toggleClass("selected");
					});
					//
					}
					}
			function handleGetServiceProductConfigurationDetailsResponseForAttributes(result, event) {
                
				if (event.type == 'exception') {
					alert(event.message);
				} else {
                    $('#ServiceConfigurationTreeDiv').empty();
					serviceConfigList = result;
					//
					//console.log(JSON.stringify(serviceConfigList));
					//console.log('**result: '+result);
					var table = ''+
							'<table id="ServiceConfigurationTree" class="treetable">'+
							'    <thead>'+
							'        <tr>'+
							'            <th>Name</th>'+
							'            <th>Attribute Value</th>'+
							'        </tr>'+
							'    </thead>'+
							'    <tbody id="ServiceConfigurationTreeBody">'+
							'        '+
							'    </tbody>'+
							'</table>';
                    
					$('#ServiceConfigurationTreeDiv').append(table);
					if (serviceConfigList != undefined) {
						//
						for(var i = 0; i < serviceConfigList.length; i++) {
							var serviceConfig = serviceConfigList[i];
							var row;
							row =  '<tr id="'+serviceConfig.service.Id+'" data-tt-id="'+serviceConfig.service.Id+'"';
							row += '>';
							row += '<td><a href="/'+serviceConfig.service.Id+'" target="_blank">'+serviceConfig.service.Name+'</a></td>';
							row += '<td></td>';
							row += '</tr>';
							$('#ServiceConfigurationTreeBody').append(row);
							//
							if (serviceConfig.productConfiguration != undefined) {
								row =  '<tr id="ProductConfig-'+serviceConfig.productConfiguration.Id+'" data-tt-id="ProductConfig-'+serviceConfig.productConfiguration.Id+'"';
								row += ' data-tt-parent-id="'+serviceConfig.service.Id+'"';
								row += '>';
								row += '<td>'+serviceConfig.productConfiguration.Name+'</td>';
								row += '<td></td>';
								row += '</tr>';
								$('#ServiceConfigurationTreeBody').append(row);
								for(var k = 0; k < serviceConfig.attributes.length; k++) {
									var att = serviceConfig.attributes[k];
									row  = '<tr id="'+att.attribute.Id+'" data-tt-id="'+att.attribute.Id+'"';
									row += ' data-tt-parent-id="ProductConfig-'+serviceConfig.productConfiguration.Id+'"';
									row += '>';
									row += '<td>'+att.attribute.Name+'</td>';
									row += '<td>'+att.attribute.cscfga__Value__c+'</td>';
									row += '</tr>';
									$('#ServiceConfigurationTreeBody').append(row);
									if(att.attFields != null) {
										for(var l = 0; l < att.attFields.length; l++) {
											var attField = att.attFields[l];                                        
											row  = '<tr id="'+attField.Id+'" data-tt-id="'+attField.Id+'"';
											row += ' data-tt-parent-id="'+att.attribute.Id+'"';
											row += '>';
											row += '<td>'+attField.Name+'</td>';
											row += '<td>'+attField.cscfga__Value__c+'</td>';
											row += '</tr>';
											$('#ServiceConfigurationTreeBody').append(row);
										}
									}
								}
							}
	
						
                        
                        }
					}
                    
                   
					//
					$("#ServiceConfigurationTree").treetable(
						{expandable: true,
						 column: 0,
						 onNodeCollapse: function() {},
						 onNodeExpand: function() {},
						 onNodeInitialized: function() {}
						});
                    $("#ServiceConfigurationTree").treetable("expandAll");
					//
					// ------------------------------------------------------------
					// Highlight selected row
					$("#ServiceConfigurationTree tbody").on("mousedown", "tr", function () {
						$(".selected").not(this).removeClass("selected");
						$(this).toggleClass("selected");
					});
					//
				}
			}
			
            </script>
        <script>
        function viewKeyAttributes(input){
            if(input.checked){
                Visualforce.remoting.Manager.invokeAction(
					'{!$RemoteAction.LG_ViewAttributeDefenitionController.getServiceProductConfigurationDetails}',
					'{!csord__Service__c.Id}',
					handleGetServiceProductConfigurationDetailsResponseForKeyAttributes,
					{escape: false}
				);
                }
            else{
                Visualforce.remoting.Manager.invokeAction(
					'{!$RemoteAction.LG_ViewAttributeDefenitionController.getServiceProductConfigurationDetails}',
					'{!csord__Service__c.Id}',
					handleGetServiceProductConfigurationDetailsResponseForAttributes,
					{escape: false}
				);
                }
                }
        </script>
