			<apex:pageBlockButtons location="top">
                
                    <apex:commandButton value="Return To Service" title="Return To Service" action="{!cancel}" style="vertical-align:Â middle"/> 
              
			</apex:pageBlockButtons>
            <div align="right">
             View Key Attributes Only<apex:inputCheckbox id="viewKeyAttribute" label="View Key Attributes Only" onclick="viewKeyAttributes(this)"  />
            </div>
