<apex:page showHeader="false" sidebar="false" controller="UM_CongaComposerController">
    <script>
        function CloseAndRefresh(){
            window.opener.location.href="/{!$CurrentPage.parameters.Id}";
            self.close();
        }
        window.resizeTo(600,400);
        
    </script>
   
    <apex:outputPanel rendered="{!flagError}">
    <div class="message errorM3" role="alert">
        <table border="0" cellpadding="0" cellspacing="0" class="messageTable" style="padding:0px;margin:0px;">
            <tbody><tr valign="top">
                <td>
                    <img alt="ERROR" class="msgIcon" src="/s.gif" title="ERROR"/>
                </td>
                <td class="messageCell"><div id="j_id0:j_id2:j_id3:j_id4:0:j_id5:j_id6:j_id8" class="messageText"><span id="j_id0:j_id2:j_id3:j_id4:0:j_id5:j_id6:j_id9" style="color:#cc0000">
                                <h4>Error:</h4></span>{!myMsg}<br/></div>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                </td>
            </tr>
        </tbody></table>
    </div>
    </apex:outputPanel>
    <apex:outputPanel rendered="{!flagSuccess}">
    <div class="message confirmM3" role="alert">
        <table border="0" cellpadding="0" cellspacing="0" class="messageTable" style="padding:0px;margin:0px;">
            <tbody><tr valign="top">
                <td>
                    <img alt="CONFIRM" class="msgIcon" src="/s.gif" title="CONFIRM"/>
                </td>
                <td class="messageCell"><div id="j_id0:j_id2:j_id3:j_id4:0:j_id5:j_id6:j_id8" class="messageText"><span id="j_id0:j_id2:j_id3:j_id4:0:j_id5:j_id6:j_id9">
                                <h4>Success:</h4></span>{!myMsg}<br/></div>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                </td>
            </tr>
        </tbody></table>
    </div>
    </apex:outputPanel>
    <br/>
    
    <p style="padding-left:0.5cm;">
        <input type="button" Class="btn" id="btn" onclick="CloseAndRefresh();" value="Close" />        
    </p>
</apex:page>